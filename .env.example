# Worker Connect Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===========================================
# REQUIRED SETTINGS
# ===========================================

# Django Secret Key (REQUIRED for production)
# Generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-super-secret-key-here-replace-this

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# Debug mode (set to False in production!)
DEBUG=False

# Allowed hosts (comma-separated)
# Development: localhost,127.0.0.1
# Production: yourdomain.com,www.yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# DATABASE SETTINGS
# ===========================================

# Database URL (optional - defaults to SQLite)
# PostgreSQL: postgres://user:password@host:port/dbname
# MySQL: mysql://user:password@host:port/dbname
# SQLite: sqlite:///path/to/db.sqlite3
DATABASE_URL=sqlite:///db.sqlite3

# Database connection pool settings (for production with PostgreSQL)
# DB_POOL_SIZE=5
# DB_MAX_OVERFLOW=10
# DB_POOL_TIMEOUT=30

# ===========================================
# CORS SETTINGS
# ===========================================

# CORS allowed origins (comma-separated)
# Development: http://localhost:19006,http://localhost:8081
# Production: https://yourdomain.com,https://app.yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost:19006,http://localhost:8081,http://localhost:3000

# Allow all origins (set to True for development only!)
CORS_ALLOW_ALL_ORIGINS=False

# ===========================================
# API SETTINGS
# ===========================================

# API URL for mobile app
API_URL=http://localhost:8000/api

# Rate limiting
THROTTLE_ANON_RATE=100/hour
THROTTLE_USER_RATE=1000/hour

# ===========================================
# EMAIL SETTINGS
# ===========================================

# Email backend
# Development: django.core.mail.backends.console.EmailBackend
# Production: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# SMTP settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Default from email
DEFAULT_FROM_EMAIL=noreply@workerconnect.com

# ===========================================
# SECURITY SETTINGS
# ===========================================

# CSRF trusted origins (comma-separated)
# Must include all domains that will make requests
CSRF_TRUSTED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# Session security
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
CSRF_COOKIE_SECURE=False     # Set to True in production with HTTPS
SESSION_COOKIE_AGE=86400     # Session timeout in seconds (24 hours)

# HTTPS settings (enable in production)
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# ===========================================
# MEDIA/STATIC FILES
# ===========================================

# Media files URL (for uploaded files)
MEDIA_URL=/media/

# Static files URL
STATIC_URL=/static/

# ===========================================
# LOGGING
# ===========================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log to file (in addition to console)
LOG_TO_FILE=True

# ===========================================
# THIRD-PARTY SERVICES (Optional)
# ===========================================

# Sentry DSN for error tracking
# SENTRY_DSN=https://your-sentry-dsn

# Redis URL (for caching/celery)
# REDIS_URL=redis://localhost:6379/0

# Celery broker URL
# CELERY_BROKER_URL=redis://localhost:6379/0

# ===========================================
# MOBILE APP SETTINGS
# ===========================================

# Push notification service
# EXPO_ACCESS_TOKEN=your-expo-access-token

# Firebase settings (for push notifications)
# FIREBASE_SERVER_KEY=your-firebase-server-key
